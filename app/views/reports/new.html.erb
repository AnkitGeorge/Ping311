<div class="show_report_block">
  <h2>Report a Pot Hole</h2>
  <%= form_for @report do |f| %>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.submit %>
    </div>


  <% end %>
  <br>
</div>
